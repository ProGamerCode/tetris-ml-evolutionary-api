{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "files": [
    "./node_modules/typescript/lib/lib.es6.d.ts",
    "./node_modules/@types/node/index.d.ts",
    "./src/types.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "server.ts"
  ]
}
